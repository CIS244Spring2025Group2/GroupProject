<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plantTracker.controller.PlantTrackerController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-background-color: green;" text="Plant Tracker" textFill="#ffc220" VBox.vgrow="ALWAYS">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="57.0" prefWidth="600.0">
         <children>
            <MenuBar layoutX="14.0" layoutY="1.0">
              <menus>
                <Menu mnemonicParsing="false" text="User Menu">
                  <items>
                      <MenuItem fx:id="editUserInfo" mnemonicParsing="false" onAction="#handleEditUserInfo" text="Edit User Info" />
                      <MenuItem fx:id="updatePassword" mnemonicParsing="false" onAction="#handleUpdatePassword" text="Update Password" />
                        <MenuItem fx:id="manageUsers" mnemonicParsing="false" onAction="#handleManageUsers" text="Manage Users" />
                        <MenuItem fx:id="logout" mnemonicParsing="false" onAction="#handleLogout" text="Log Out" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Button fx:id="viewPlantsButton" layoutX="234.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleViewPlants" text="View Plants">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </AnchorPane>
      <StackPane prefHeight="43.0" prefWidth="600.0">
         <children>
            <Button fx:id="viewIncompleteRemindersButton" mnemonicParsing="false" onAction="#handleViewIncompleteReminders" text="View Incomplete Reminders" />
            <Button fx:id="viewCompleteRemindersButton" mnemonicParsing="false" onAction="#handleViewCompleteReminders" text="View Complete Reminders" />
         </children>
      </StackPane>
	  <ScrollPane fx:id="upcomingRemindersScrollPane" prefHeight="213.0" prefWidth="580.0" VBox.vgrow="ALWAYS">
  		 <content>
   		   <VBox fx:id="upcomingRemindersVBox" spacing="5.0" />
	     </content>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
	  </ScrollPane>
      <Pane prefHeight="39.0" prefWidth="600.0" style="-fx-background-color: green;" VBox.vgrow="SOMETIMES">
         <children>
            <Button fx:id="viewRemindersButton" layoutX="226.0" layoutY="7.0" mnemonicParsing="false" onAction="#handleViewReminders" prefHeight="26.0" prefWidth="148.0" text="Manage Reminders" />
         </children>
      </Pane>
   </children>
</VBox>
